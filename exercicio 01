nome = input('Qual o seu nome? ')
print(f'Seu nome com letras maiúsculas é {nome.upper()}')
print(f'Seu nome com letras minúsculas é {nome.lower()}')

nome_sem_espacos = nome.replace(' ', '')
print(f'Seu nome completo tem {len(nome_sem_espacos)} letras.')

nomes = nome.split()
print(f'E seu primeiro nome tem {len(nomes[0])} letras.')
